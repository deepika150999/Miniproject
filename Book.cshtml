@model AirTicketMiniProject.Models.Book

@{
    ViewData["Title"] = "Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
   
}


<div class="row">
    <h4>Booking</h4>
    <div class="col-md-4">
        <form asp-action="Booking">
            
            <div><p>Select Your ClassType</p>
                <input type="radio" asp-for="ClassType" value="Business"> Business Class </input>
                <input type="radio" asp-for="ClassType"  value="Economy"> Economy Class </input>
            </div>
            <div class="form-group">
                <label asp-for="DateofBooking" class="control-label"></label>
                <input asp-for="DateofBooking" class="form-control" />
                <span asp-validation-for="DateofBooking" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="NumberOfPassengers" class="control-label" >Enter Number of Passengers</label>
                <input type="number" asp-for="NumberOfPassengers"  placeholder="Number of Passengers" onchange="fnPassengerCountChange()"/> 
               
            </div>
            <input type="hidden" asp-for="FlightNumber"/>
            
            <div class="form-group">
                <input type="submit" value="Next" class="btn btn-primary" onclick="fnPassengerCountChange" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="User" asp-action="FLight">Back to List</a>
</div>
<script>
    function fnPassengerCountChange(){
       
            PassengerCount =@Model.NumberOfPassengers;
        
    }
</script>
